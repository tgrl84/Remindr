<h1 class="Title">Dashboard</h1>
<div class="dashboard">
    <div class="info">
        {{#if user}}
            <h2>Vos informations</h2>
            <p>{{user.lastName}} {{user.firstName}}</p>
            <p>{{user.email}}</p>
            <h2>Vos groupe</h2>
            <a class="button" href='/create-group'>Crée un groupe</a>
            <div class="groupe">
                {{#each groups}}
                    <p> <a class="button" href="/groupe/{{this.id}}">{{this.name}}</a> </p>
                {{/each}}   
            </div>
            <a class="button" href='/logout'>Se deconnecter</a>
        {{else}}
            <p>Vous n'êtes pas connecté</p>
            <a class="button" href='/login'>Se connecter</a>
            <a class="button" href='/signup'>Créer un compte</a>
        {{/if}}
    </div>
        
    {{#if rappels}}
        <div class="rappels" >
            <h2>Vos rappels</h2>
            {{#each rappels}}
                <div class="rappel" style="background-color: {{this.couleur}};">
                    <p>{{this.nom}}</p>
                    <div class="description">
                        <p>{{this.description}}</p>
                    </div>
                    <p>{{this.date}}</p>
                    <p>{{this.heure}}</p>
                </div>
            {{/each}}
        </div>
    {{/if}}
</div>